<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PostList.ListItem">

    <LinearLayout
        android:id="@+id/view_post"
        style="@style/PostList.ListItemContent"
        >
        <LinearLayout
            style="@style/PostList.ListItemTitle"
            >

            <TextView
                android:id="@+id/item_index"
                style="@style/PostList.ItemIndex"
                android:text="@string/dummy_index"/>

            <TextView
                style="@style/PostList.ItemTitle"
                android:id="@+id/item_title"
                android:text="@string/dummy_title"
                />

        </LinearLayout>

        <TextView
            style="@style/PostList.ItemUrl"
            android:id="@+id/item_url"
            android:text="@string/dummy_url" />

        <TextView
            style="@style/PostList.ItemDetails"
            android:id="@+id/post_details"
            android:text="@string/dummy_details"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_comments"
        style="@style/PostList.ListItemComments"
        >

        <ImageView
            android:src="@drawable/ic_comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="comments" />

    </LinearLayout>

</LinearLayout>